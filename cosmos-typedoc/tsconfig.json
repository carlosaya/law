{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "target": "ES2018",
    "lib": ["ES2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": false,
    "strictNullChecks": false
  },
  "exclude": ["./dist", "**/*.spec.ts"]
}
